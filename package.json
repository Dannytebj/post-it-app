{
  "name": "postit",
  "version": "1.0.0",
  "description": "PostIt is a simple application that allows friends and colleagues create groups for notification",
  "main": "src/index.js",
  "engines": {
    "node": "6.11.1"
  },
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "scripts": {
    "dev": "babel-watch ./server/server.js",
    "starts:dev": "NODE_ENV=development webpack  --config webpack.dev.js && babel-node ./server/server.js",
    "start": "NODE_ENV=production node server/dist/server.js",
    "start:dev": "nodemon --watch server --exec babel-node ./server/server.js",
    "build:server": "rimraf server/dist/ && babel ./server --out-dir ./server/dist/ --copy-files",
    "build:client": "webpack -p --config webpack.config.prod.js",
    "build": "npm run build:server && npm run build:client",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "client-test": "jest client/src/__test__/*.spec.js",
    "postinstall": "[\"$NODE_ENV\" != production ] && exit 0; npm run build",
    "test": "NODE_ENV=test nyc --reporter=html --reporter=text ./node_modules/.bin/mocha --compilers js:babel-core/register --timeout 300000 server/test/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dannytebj/post-it-app.git"
  },
  "author": "Daniel Atebije",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Dannytebj/post-it-app/issues"
  },
  "homepage": "https://github.com/Dannytebj/post-it-app#readme",
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^2.13.1",
    "dotenv": "^4.0.0",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^3.1.4",
    "eslint": "^4.7.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-config-kuma": "0.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "image-webpack-loader": "^3.2.0",
    "istanbul": "^1.0.0-alpha.2",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "nyc": "^11.2.1",
    "react-test-renderer": "^16.0.0",
    "sinon": "^2.3.6",
    "webpack-dev-server": "^1.16.5",
    "webpack-merge": "^4.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "Login": "<rootDir>/client/src/js/components/Login.jsx",
      "GroupStore": "<rootDir>/client/src/js/stores/GroupStore.js",
      "MessageStore": "<rootDir>/client/src/js/stores/MessageStore.js",
      "UserStore": "<rootDir>/client/src/js/stores/UserStore.js",
      "^.+\\.(s?css|less)$": "<rootDir>/client/src/__test__/mocks/styleMock.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/vendors/**",
      "!**/public/**",
      "!**/server/**",
      "!**/server/test/**",
      "!**/coverage/**",
      "!webpack.config.js",
      "!bundle.js",
      "!client/src/index.js",
      "!client/src/js/components/Routes.jsx",
      "!webpack.common.js",
      "!webpack.config.prod.js",
      "!webpack.dev.js",
      "!client/src/js/components/Groups.jsx"
    ]
  },
  "dependencies": {
    "attr-accept": "^1.1.0",
    "axios": "^0.16.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-react-remove-prop-types": "^3.0.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "babel-watch": "^2.0.7",
    "body-parser": "~1.0.1",
    "chai": "^4.0.0",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.17",
    "css-loader": "^0.26.4",
    "dotenv": "^4.0.0",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.15.3",
    "express-validator": "^4.3.0",
    "faker": "^4.1.0",
    "file-loader": "^0.10.1",
    "firebase": "^4.1.5",
    "flux": "^3.1.2",
    "history": "^4.7.2",
    "html-webpack-plugin": "^2.30.1",
    "http": "0.0.0",
    "is-utf8": "^0.2.1",
    "jquery": "^3.2.1",
    "keymirror": "^0.1.1",
    "loader-utils": "^1.1.0",
    "mocha": "^3.4.2",
    "moment": "^2.19.2",
    "nexmo": "^2.0.2",
    "node-mailer": "^0.1.1",
    "node-sass": "^4.5.3",
    "nodemailer": "^4.0.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "nodemon": "^1.11.0",
    "promise": "^7.1.1",
    "prop-types": "^15.5.10",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-google-login": "^2.11.2",
    "react-hot-loader": "^1.3.1",
    "react-image": "^1.0.1",
    "react-router": "^3.0.2",
    "react-router-dom": "^4.1.1",
    "react-toastr": "^2.9.3",
    "request": "^2.81.0",
    "sass-loader": "^6.0.6",
    "shortid": "^2.2.8",
    "should": "^11.2.1",
    "sinon": "^2.3.2",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "stream": "0.0.2",
    "style-loader": "^0.18.2",
    "superagent": "^3.4.4",
    "supertest": "^3.0.0",
    "toastr": "^2.1.2",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "underscore": "^1.8.3",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-merge": "^4.1.1"
  }
}
